<UserControl
    x:Class="ThemePreviewer.Samples.TreeViewSampleWpf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:aero10="clr-namespace:PresentationTheme.Aero.Win10;assembly=PresentationTheme.Aero.Win10"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TreeView x:Name="treeView1" Margin="3"
              aero10:TreeViewService.FullRowSelect="True"/>
    <TreeView x:Name="treeView2" Margin="3" Grid.Row="1"
              Style="{DynamicResource {x:Static aero10:ExplorerStyles.TreeViewStyleKey}}"
              aero10:TreeViewService.FullRowSelect="True"/>
  </Grid>
</UserControl>
